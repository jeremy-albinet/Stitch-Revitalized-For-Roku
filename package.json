        "watch": "npm run build -- --watch",
        "package": "bsc --create-package",
        "lint": "bslint",
        "lint:fix": "bslint --fix",
        "fmt": "brighterscript-formatter --write '**/*.{brs,bs}'",
        "fmt:check": "brighterscript-formatter --check '**/*.{brs,bs}'"

    },
    "devDependencies": {
        "@rokucommunity/bslint": "^0.8.34",
        "brighterscript-formatter": "^1.7.17",
        "ghooks": "^2.0.4",
        "ropm": "^0.10.37"
    },
    "dependencies": {
        "@npmcli/fs": "^4.0.0",
        "@rokucommunity/bslib": "^0.1.1",
        "brighterscript": "^0.70.0",
        "bslib": "npm:@rokucommunity/bslib@^0.1.1",
        "glob": "^11.0.3",
        "lru-cache": "^11.2.2",
        "rimraf": "^6.0.1"
    },
    "config": {
        "ghooks": {
            "pre-commit": ""
        }
    }
